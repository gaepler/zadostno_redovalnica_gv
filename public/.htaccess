<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /zadostno_redovalnica_gv/public/

    # Odstrani .php kon훾nico iz URL-jev
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.*)$ $1.php [L]

    # Prepre훾i neposreden dostop do .php datotek, 훾e je zahtevan brez kon훾nice
    RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
    RewriteRule ^ /%1 [R=301,L]
</IfModule>